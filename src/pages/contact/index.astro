---
import { TextSection } from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';
import HeroSection from '../../components/sections/heros/HeroSection.astro';

const seo = {
	title: 'Contact HumemAI',
	description: 'Get in touch with the HumemAI team.',
};
---

<Layout {seo}>
	<HeroSection>
		<div slot="text-container">
			<h1>Contact HumemAI</h1>
			<p>
				We’re continuously looking for exceptional talent and mission‑aligned investors.
				If you’d like to collaborate or join us, email
				<strong><a href="mailto:info@humem.ai">info@humem.ai</a></strong>.
			</p>
		</div>
		<picture slot="image-container">
			<img
				src="/assets/images/contact.png"
				alt="Contact HumemAI"
				loading="lazy"
			/>
		</picture>
	</HeroSection>
</Layout>
