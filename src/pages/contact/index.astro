---
import { TextSection } from '@components/odyssey-theme';
import Layout from '../../layouts/Page.astro';
import HeroSection from '../../components/sections/heros/HeroSection.astro';

const seo = {
	title: 'Contact HumemAI',
	description: 'Get in touch with HumemAI.',
};
---

<Layout {seo}>
	<HeroSection>
		<div slot="text-container">
			<h1>Contact HumemAI</h1>
			<p>
				Interested in <strong>research collaboration</strong>, <strong>early partnerships</strong>, or <strong>investment opportunities</strong>?
			</p>
			<p>
				<strong>Email:</strong> <a href="mailto:info@humem.ai">info@humem.ai</a>
			</p>
		</div>
		<picture slot="image-container">
			<img
				src="/assets/images/contact.png"
				alt="Contact HumemAI"
				loading="lazy"
			/>
		</picture>
	</HeroSection>
</Layout>
